{
    "name": "yourcoding/yoco-woocommerce-loyalty",
    "description": "Een uitgebreide loyalty plugin voor WooCommerce met puntensysteem, beloningen en automatische GitHub updates. Ontwikkeld door Your Coding.",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Your Coding - Sebastiaan Kalkman",
            "email": "info@yourcoding.nl",
            "homepage": "https://www.yourcoding.nl",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/YourCoding/yoco-woocommerce-loyalty",
    "support": {
        "issues": "https://github.com/YourCoding/yoco-woocommerce-loyalty/issues",
        "source": "https://github.com/YourCoding/yoco-woocommerce-loyalty",
        "email": "info@yourcoding.nl"
    },
    "keywords": [
        "wordpress",
        "plugin",
        "woocommerce",
        "loyalty",
        "points",
        "rewards",
        "customer-retention",
        "github-updates",
        "yoco",
        "your-coding"
    ],
    "require": {
        "php": ">=7.4",
        "composer/installers": "^1.0 || ^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.6",
        "wp-coding-standards/wpcs": "^2.3",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "composer/installers": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "autoload": {
        "psr-4": {
            "YoCo\\Loyalty\\": "includes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "YoCo\\Loyalty\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "lint": "phpcs",
        "lint:fix": "phpcbf",
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage",
        "post-install-cmd": [
            "@composer dump-autoload -o"
        ],
        "post-update-cmd": [
            "@composer dump-autoload -o"
        ]
    },
    "scripts-descriptions": {
        "lint": "Run PHP CodeSniffer to check coding standards",
        "lint:fix": "Run PHP Code Beautifier to fix coding standards issues",
        "test": "Run PHPUnit tests",
        "test:coverage": "Run PHPUnit tests with coverage report"
    },
    "extra": {
        "installer-name": "yoco-woocommerce-loyalty",
        "installer-paths": {
            "wp-content/plugins/{$name}/": ["type:wordpress-plugin"]
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}